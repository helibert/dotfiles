# set repo mirrors
options(repos=c("http://stat.ethz.ch/CRAN/"))

# larger history
Sys.setenv(R_HISTSIZE = '100000')

#ht==headtail, i.e., show the first and last 10 items of an object
ht <- function(d) rbind(head(d,10), tail(d,10))



